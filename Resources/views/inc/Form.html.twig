<div class="form-group">
    <label for="type" class="col-sm-2 control-label" for="setting_type">Type</label>
    <div class="btn-group col-sm-8" id="edit-setting-type">
        <label class="setting-type setting-string btn btn-default"
               rel="string">Default</label>
        <label class="setting-type setting-bool btn btn-default"
               rel="bool">Boolean</label>
        <label class="setting-type setting-array btn btn-default"
               rel="array">Array</label>
        <label class="setting-type setting-object btn btn-default"
               rel="object">Object</label>
    </div>
</div>
<div class="form-group">
    <label for="value" class="col-sm-2 control-label">Settings</label>
    <div class="col-sm-6">
        <div class="setting-input-div setting-bool-div hidden">
            <div class="btn-group">
                <label class="setting-type-bool btn btn-default" rel="true">On</label>
                <label class="setting-type-bool btn btn-default" rel="false">Off</label>
            </div>
        </div>

        <div class="setting-input-div setting-array-div hidden">
            <ul id="add-setting-array" class="list-unstyled" rel="0">
                <li>
                    <div class="input-group">
                        <input type="text" class="form-control" value="">
                            <span class="input-group-btn">
                                <label class="btn btn-danger" type="button" onclick="removeArrayInput(this)"><i class="glyphicon glyphicon-remove"></i></label>
                            </span>
                    </div>
                </li>
            </ul>

            <label class="settings-array-add pull-right btn btn-success"><i class="glyphicon glyphicon-plus"></i></label>
        </div>

        <div  class="setting-input-div setting-object-div hidden">
            <textarea id="add-setting-object" class="form-control ng-isolate-scope" rows="12" cols="30"></textarea>
        </div>

        <div class="setting-input-div setting-string-div hidden">
            <input id="add-setting-default" type="text" class="form-control" />
        </div>
    </div>
</div>