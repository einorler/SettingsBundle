{% extends 'ONGRSettingsBundle::layout.html.twig' %}

{% block main %}
    <div class="container-fluid" id="settingsListContainer">
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-hover">
                    {% for data in data %}
                        <tbody>
                        <tr>
                            <td class=".col-xs-8 .col-md-6 list-name">{{ data.name }}</td>
                            <td class=".col-xs-18 .col-md-8 list-description">{{ data.description }}</td>
                            <td class=".col-xs-6 .col-md-4">{{ data.type }}</td>
                            <td class=".col-xs-12 .col-md-8">
                                kk
                            </td>

                            <td class="col-xs-3">
                                <a href="#" class="btn btn-primary btn-xs">
                                    <span class="glyphicon glyphicon-edit"></span>
                                </a>
                                <a href="#" class="btn btn-primary btn-xs">
                                    <span class="glyphicon glyphicon-transfer"></span>
                                </a>
                                <button href="#" data-toggle="modal" data-target="#deleteModal" class="btn btn-danger btn-xs setting-remove">
                                    <span class="glyphicon glyphicon-remove"></span>
                                </button>
                            </td>
                        </tr>
                        </tbody>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}
