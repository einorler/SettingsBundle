{% extends 'ONGRSettingsBundle::layout.html.twig' %}

{% block main %}
    <div class="container-fluid">
        <div class="row">
            <h2 class="col-sm-offset-2 col-sm-6">Edit {{ setting.name }}</h2>
        </div>
        <form class="form-horizontal" id="editSettingForm" url="{{ path('ongr_settings_setting_set', ['hjkfb','kjbf']) }}">
            <div class="form-group">
                <label for="name" class="col-sm-2 control-label">Name</label>
                <div class="col-sm-6">
                    <input type="text" id="editSettingName" class="form-control" value="{{ setting.name }}" disabled/>
                </div>
            </div>
            <div class="form-group">
                <label for="profile" class="col-sm-2 control-label">Profile</label>
                <div class="col-sm-6">
                    <input type="text" id="editSettingProfiles" class="form-control" value="{{ setting.profile }}" disabled/>
                </div>
            </div>
            <div class="form-group">
                <label for="description" class="col-sm-2 control-label">Description</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" value="{{ setting.description }}"/>
                </div>
            </div>
            <div class="form-group">
                <label for="type" class="col-sm-2 control-label">Type</label>
                <div class="btn-group col-sm-8" id="editSettingType">
                    <label class="setting-type btn btn-default
                        {% if setting.type == 'string' %}btn-primary{% endif %}"
                           rel="setting-default-div">Default</label>
                    <label class="setting-type btn btn-default
                        {% if setting.type == 'bool' %}btn-primary{% endif %}"
                           rel="setting-boolean-div">Boolean</label>
                    <label class="setting-type btn btn-default
                        {% if setting.type == 'array' %}btn-primary{% endif %}"
                           rel="setting-array-div">Array</label>
                    <label class="setting-type btn btn-default
                        {% if setting.type == 'object' %}btn-primary{% endif %}"
                           rel="setting-object-div">Object</label>
                </div>
            </div>
            <div class="form-group">
                <label for="value" class="col-sm-2 control-label">Settings</label>
                <div class="col-sm-10">
                    <div class="setting-boolean-div {% if setting.type != 'bool' %}hidden{% endif %}">
                        <div class="btn-group">
                            <label class="setting-type-boolean btn btn-default
                                {% if setting.type == 'bool' and setting.data.value == true %}btn-primary{% endif %}" rel="true">On</label>
                            <label class="setting-type-boolean btn btn-default
                                {% if setting.type == 'bool' and setting.data.value == false %}btn-primary{% endif %}" rel="false">Off</label>
                            <input id="editSettingBoolean" type="checkbox" name="setting-boolean" class="hidden"
                                   {% if setting.type == 'bool' and setting.data.value == true %}checked="true"{% endif %}>
                        </div>
                    </div>

                    <div class="setting-array-div {% if setting.type != 'array' %}hidden{% endif %}">
                        <ul id="editSettingArray" class="list-unstyled" rel="0">
                            {% for value in setting.data.value %}
                                <li>
                                    <div class="input-group">
                                        <input type="text" class="form-control" name="setting-array_{{ loop.index0 }}" value="{{ value }}">
                                        <span class="input-group-btn">
                                            <button class="btn btn-danger" type="button" onclick="addArrayRemoveInput(this)"><i class="glyphicon glyphicon-remove"></i></button>
                                        </span>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>

                        <button class="settings-array-add pull-right btn btn-success"><i class="glyphicon glyphicon-plus"></i></button>
                    </div>

                    <div  class="setting-object-div {% if setting.type != 'object' %}hidden{% endif %}">
                        <textarea id="editSettingObject" class="form-control ng-isolate-scope" rows="12" cols="30"></textarea>
                    </div>

                    <div class="setting-default-div  {% if setting.type != 'string' %}hidden{% endif %}">
                        <input id="editSettingDefault" name="setting-default" type="text" class="form-control" {% if setting.type == 'string' %}value="{{ setting.data.value }}"{% endif %}/>
                    </div>
                </div>
            </div>

            <div class="form-group no-margin-bottom" id="editSettingMessages">
                <div class="col-sm-offset-2 col-sm-10">
                    <p class="alert alert-success no-margin-bottom hidden">Setting created successfully.</p>
                    <p class="alert alert-danger no-margin-bottom hidden"><strong>Creation failed</strong>. <span class="error-message"></span></p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-6">
                    <button class="btn btn-primary" id="submitSettingForEditing" onclick="addSetting(event, 'edit');">Save</button>
                    <a class="btn btn-danger" href="{{ path('ongr_settings_settings_list', { 'profile': setting.profile }) }}">Close</a>
                </div>
            </div>

        </form>
    </div>
{% endblock %}
